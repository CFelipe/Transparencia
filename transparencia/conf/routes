# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       controllers.Application.index()

GET     /administrador                          controllers.Administrador.index()
GET     /administrador/signIn                   controllers.Administrador.signIn()
POST    /administrador/doLogin                  controllers.Administrador.doLogin()
POST    /administrador/criarParlamentar         controllers.Administrador.criarParlamentar()
POST    /administrador/criarProcesso            controllers.Administrador.criarProcesso()

GET     /administrador/criarSessao              controllers.Administrador.sessoes()
POST    /administrador/criarSessao              controllers.Administrador.criarSessao()
POST    /administrador/criarSessao/:id/delete   controllers.Administrador.excluirSessao(id: Long)

GET     /parlamentar/:id                        controllers.Parlamentar.listarUm(id: Long)
GET     /processo/:id                           controllers.Processo.listarUm(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                           controllers.Assets.at(path="/public", file)
